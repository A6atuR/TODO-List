<div class = "devise_container">

<h1>Sign in</h1>
	
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class = "devise_block">
    <%= f.label :email, :class => "label" %>
    <%= f.email_field :email, :autofocus => true, :class => "email_field" %>
  </div>

  <div class = "devise_block">
    <%= f.label :password, :class => "label" %>
    <%= f.password_field :password, :class => "password_field" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class = "devise_block">
      <%= f.check_box :remember_me, :class => "check_box" %>
      <%= f.label :remember_me, :class => "label_check_box" %>
    </div>
  <% end -%>

  <div>
    <%= f.submit "Sign in", :class => "button" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>